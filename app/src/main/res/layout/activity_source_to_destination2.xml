<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SourceToDestination2"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#aaccdd">
        <!--
    <fragment android:id="@+id/autocomplete_fragment1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:name="com.google.android.libraries.places.widget.AutocompleteSupportFragment"
        />-->


        <AutoCompleteTextView
            android:id="@+id/tvac"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:text=""
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="#aaccdd"
            android:gravity="bottom|center_vertical"
            android:layout_marginTop="10dp">
            <ImageView
                android:layout_width="40dp"
                android:layout_height="50dp"
                android:src="@drawable/source"/>
        <FrameLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
        >
        <AutoCompleteTextView
            android:id="@+id/tvac2"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Source Address"
            android:singleLine="true"
            android:layout_gravity="center_vertical"
            android:text=""
            />
            <Button
                android:id="@+id/clear1"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/close"
                android:layout_gravity="right"
                android:layout_marginRight="10dp"
                />
        </FrameLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="#aaccdd"
            android:gravity="bottom|center_vertical"
            android:layout_marginTop="10dp">
            <ImageView
                android:layout_width="40dp"
                android:layout_height="50dp"
                android:src="@drawable/destination"/>
            <FrameLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                >

            <AutoCompleteTextView
                android:id="@+id/tvac3"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="Destination Address"
                android:singleLine="true"
                android:dropDownWidth="300dp"
                android:layout_gravity="center_vertical"
                android:text=""
                />
                <Button
                    android:id="@+id/clear2"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/close"
                    android:layout_gravity="right"
                    android:layout_marginRight="10dp"
                    />
            </FrameLayout>

        </LinearLayout>
    <Button
        android:id="@+id/btnFind"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Find"
        android:background="#aaddcc"
        android:textSize="25sp"
        />
        <LinearLayout
            android:id="@+id/lvDistanceDuration"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tvDistance"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Distance"
                />
            <View
                android:layout_width="2dp"
                android:layout_height="match_parent"
                android:background="#aaccdd"/>
            <TextView
                android:id="@+id/tvDuration"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Duration"
                />
        </LinearLayout>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#ddccaa">
        <fragment xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/map"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            class="com.google.android.gms.maps.SupportMapFragment" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:src="@drawable/location"
            />
        <TextView
            android:id="@+id/tvresult"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Location = "
            android:layout_alignBottom="@+id/map"
            android:elevation="1dp"
            android:textSize="15sp"
            android:background="#aacddd"
            android:singleLine="true"
            />
    </RelativeLayout>
</LinearLayout>